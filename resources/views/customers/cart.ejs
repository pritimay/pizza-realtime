<section class="cart py-16">

    <%if(!session.cart) { %>
     <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart is Empty :( </h1>
            <p class="text-lg mb-12 text-grey-500" >You prabably have not ordered any pizza yet.<br> Do you want to order ?</p>
            <img src="/img/empty-cart.png" class="w-2/5 mx-auto">
            <a class="inline-block px-6 py-2 rounded-full btn-primary font-bold text-white mt-4" href="">Order Now</a>
        </div>
    </div>
    <% } else { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-grey-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <div class="font-bold ml-4 text-2xl">Order summary</div>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
                <div class="ml-4 flex-1">
                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.qty %></span>
                <span class="font-bold text-2xl"><%= pizza.item.price * pizza.qty %></span>
            </div>
            <% }%>
       </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total amount</span>
                <span class="text-2lg font-bold total-amount ml-2"><%= session.cart.totalPrice %></span>
            </div>
            <div>
                <form action="" class="mt-12">
                    <input class="border border-gray-400 p-2 mb-4 w-1/2" type="text" placeholder="Address">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Phone Number">
                    <div>
                        <!--<button type="submit" class="btn-primary px-6 py-2 mt-6 font-bold rounded-full text-white">Order now
                            
                        </button> -->
                    </div>
                </form>
            </div>
            <a href="/login" class="inline-block cursor-pointer px-6 btn-primary px-6 py-2 mt-6 font-bold rounded-full text-white">Login
                to cotinue</a>
        </div>
    

    </div>
    <% } %>
</section>